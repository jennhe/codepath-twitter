<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComposeActivity">

    <EditText
        android:id="@+id/etNewTweet"
        android:layout_width="417dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="What's happening?"
        android:maxLength="280"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:textColorHighlight="#03A9F4"></EditText>

    <Button
        android:id="@+id/btnTweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="8dp"
        android:text="Tweet"
        app:layout_constraintBottom_toTopOf="@+id/etNewTweet"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvCharacterCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="280"
        app:layout_constraintEnd_toStartOf="@+id/btnTweet"
        app:layout_constraintTop_toTopOf="@+id/btnTweet" />
    tools:layout_editor_absoluteY="448dp" />



</android.support.constraint.ConstraintLayout>